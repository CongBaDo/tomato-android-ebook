<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/newmain">
	<LinearLayout android:orientation="vertical"
		android:layout_width="450px" android:layout_height="500px"
		android:background="@drawable/loginimg" android:layout_gravity="center">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:textSize="50px" />

		<LinearLayout android:orientation="vertical"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_height="fill_parent" android:layout_width="fill_parent"
			android:id="@+id/Login_Layout" android:paddingTop="20px">
			<LinearLayout android:orientation="vertical"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:gravity="center" android:id="@+id/linearLayout2"
				android:paddingTop="20px">
				<TableLayout android:orientation="vertical"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:id="@+id/Login_IDLayout">

					<TableRow>
						<TextView android:id="@+id/Login_IDTitle"
							android:background="@drawable/nn1" android:padding="10px"
							android:textStyle="bold" android:textColor="#FFFFFF"
							android:layout_width="wrap_content" android:textSize="16sp"
							android:layout_height="wrap_content"></TextView>
						<EditText android:layout_marginBottom="10px"
							android:singleLine="true" android:textColor="#ff000000"
							android:layout_weight="1" android:textSize="12sp" android:id="@+id/Login_EditID"
							android:layout_width="wrap_content" android:layout_marginRight="20px"
							android:layout_height="wrap_content" android:hint="IDを入力してください             "
							android:layout_marginLeft="10px"></EditText>
					</TableRow>

					<TableRow>
						<TextView android:id="@+id/Login_PassTitle"
							android:background="@drawable/nn2" android:layout_marginLeft="10px"
							android:padding="10px" android:textStyle="bold"
							android:textColor="#FFFFFF" android:layout_width="wrap_content"
							android:textSize="16sp" android:layout_height="wrap_content"></TextView>
						<EditText android:layout_marginLeft="10px"
							android:singleLine="true" android:textColor="#ff000000"
							android:hint="Passwordを入力してください" android:textSize="12sp"
							android:id="@+id/Login_EditPass" android:layout_width="wrap_content"
							android:layout_marginRight="20px" android:layout_height="wrap_content"
							android:password="true"></EditText>
					</TableRow>
				</TableLayout>
				<LinearLayout android:orientation="vertical"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:id="@+id/linearLayout1">
					<CheckBox android:layout_marginLeft="10px"
						android:background="@drawable/saba" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/Login_checkBox"></CheckBox>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:gravity="center"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:padding="20px" android:id="@+id/Login_ButtonLayout"
				android:weightSum="1" android:layout_width="match_parent">
				<Button android:layout_height="wrap_content" android:id="@+id/Login_LogBtn"
					android:layout_width="wrap_content" android:background="@drawable/lo1"
					android:layout_marginRight="15px"></Button>
				<Button android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:background="@drawable/lo2"
					android:id="@+id/Login_syo" android:layout_marginRight="15px"></Button>
				<Button android:background="@drawable/lo3" android:id="@+id/Login_TorokuBtn"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:gravity="center"></Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
