<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/register">
   
      
    <LinearLayout  android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:id="@+id/Join_TitleLayout" >
        <TextView android:text="    " android:textAppearance="?android:attr/textAppearanceSmall" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/Join_space1"></TextView>
        <TextView android:layout_marginBottom="40px" android:textSize="25sp" android:layout_marginLeft="20px" android:layout_height="wrap_content"  android:layout_width="wrap_content" android:layout_gravity="left" android:textStyle="bold" android:id="@+id/Join_title" android:text="        "></TextView>
        <TextView  android:id="@+id/textView1"  android:text=" " android:layout_height="2dip" android:layout_width="fill_parent"></TextView>
    </LinearLayout>
    <LinearLayout  android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:id="@+id/Join_IDLayout">
        <TextView   android:textSize="16sp" android:text="E-Mail" android:layout_marginLeft="10px" android:layout_height="wrap_content" android:textColor="#FFFFFF" android:padding="10px" android:layout_width="wrap_content" android:textStyle="bold" android:id="@+id/Join_IDTitle"></TextView>
        <EditText   android:layout_marginBottom="10px" android:textColor="#ff000000" android:textSize="12sp" android:layout_marginLeft="10px" android:hint="IDを入力してください              " android:layout_marginRight="20px" android:layout_height="wrap_content" android:layout_width="wrap_content" android:singleLine="true" android:layout_weight="1" android:id="@+id/Join_EditID"></EditText>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:id="@+id/Join_PassLayout">
        <TextView  android:textSize="16sp" android:text="P/W" android:layout_marginLeft="10px" android:layout_height="wrap_content" android:textColor="#FFFFFF" android:padding="10px" android:layout_width="wrap_content" android:textStyle="bold" android:id="@+id/Join_PassTitle"></TextView>
        <EditText android:textColor="#ff000000" android:textSize="12sp" android:layout_marginLeft="10px" android:hint="Passwordを入力してください" android:layout_marginRight="20px" android:password="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:singleLine="true" android:id="@+id/Join_EditPass">
            <requestFocus></requestFocus>
        </EditText>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:id="@+id/Join_CheckPassLayout">
        <TextView android:textSize="16sp" android:layout_marginLeft="10px" android:layout_height="wrap_content" android:textColor="#FFFFFF" android:padding="10px" android:layout_width="wrap_content" android:textStyle="bold" android:layout_marginRight="10px" android:text="一度P/Wを確認します。" android:id="@+id/Join_CheckPassTitle"></TextView>
        <EditText android:textColor="#ff000000" android:textSize="12sp" android:layout_marginLeft="10px" android:hint="Passwordを入力してください" android:layout_marginRight="20px" android:password="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:singleLine="true" android:id="@+id/Join_EditCheckPass"></EditText>
    </LinearLayout>
    <LinearLayout 
     android:gravity="center"
    android:layout_height="wrap_content" 
    			  android:orientation="horizontal" 
    			  android:padding="20px" 
    			  android:id="@+id/Login_ButtonLayout" 
    			  android:weightSum="1" 
    			  android:layout_width="match_parent" >

        <Button 
        
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:gravity="center"
        android:background="@drawable/re1" android:id="@+id/Join_OKBtn" 
        ></Button>
       
    </LinearLayout>



    
</LinearLayout>
