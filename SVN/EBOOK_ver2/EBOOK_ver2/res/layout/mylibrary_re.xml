<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center">
	<ScrollView android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/scrollView1">
		<LinearLayout android:id="@+id/linearLayout5"
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/linearLayout1"
				android:gravity="center" android:orientation="vertical">
				<Gallery android:layout_marginBottom="20px"
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:gravity="center" android:layout_marginTop="10px"
					android:spacing="10px" android:animationDuration="1000" android:id="@+id/gallery">
				</Gallery>
			</LinearLayout>
			<RelativeLayout android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/linearLayout4">
				<ImageView android:id="@+id/list_book_detail" android:src="@drawable/list_book"
					android:layout_height="1px" android:layout_width="1px"
					android:visibility="gone"></ImageView>
				<TextView android:textColor="#FFFFFF" android:layout_below="@id/linearLayout4" android:textSize="30px"
					android:text="タイトル : " android:id="@+id/list_book_detail_text"
					android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
				<TextView android:text="TextView" android:id="@+id/MyLibrary_TitleName"
					android:layout_alignBottom="@id/list_book_detail_text" android:layout_toRightOf="@id/list_book_detail_text"
					android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
				<TextView android:textColor="#FFFFFF" android:textSize="30px"
					android:layout_below="@id/list_book_detail_text" android:text="著者 : "
					android:layout_width="wrap_content" android:id="@+id/MyLibrary_Author"
					android:layout_height="wrap_content"></TextView>
				<TextView android:text="TextView" android:id="@+id/MyLibrary_AuthorName"
					android:layout_alignBottom="@id/MyLibrary_Author" android:layout_toRightOf="@id/MyLibrary_Author"
					android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
				<TextView android:textColor="#FFFFFF" android:layout_width="wrap_content"
					android:textSize="30px" android:text="本の内容" android:layout_height="wrap_content"
					android:layout_below="@id/MyLibrary_Author" android:id="@+id/MyLibrary_Description"></TextView>
			</RelativeLayout>
			<LinearLayout android:background="#FFFFFF"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:id="@+id/Info_StroyLayout" android:orientation="vertical">
				<TextView android:textColor="#000000" android:layout_width="match_parent"
					android:text="内容" android:layout_marginLeft="10px"
					android:layout_height="100px" android:id="@+id/MyLibrary_Story"></TextView>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>












